<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8sp">

    <ImageView
        android:layout_width="128px"
        android:layout_height="128px"
        android:id="@+id/imageGameIcon"
        android:maxHeight="128px"
        android:maxWidth="128px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Server name"
        android:id="@+id/textServerName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageGameIcon"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Server location"
        android:id="@+id/textServerLocation"
        android:layout_below="@+id/imageGameIcon"
        android:layout_toEndOf="@+id/imageGameIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-1"
        android:id="@+id/textPing"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/labelPing"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0/0"
        android:id="@+id/textServerLoad"
        android:layout_alignTop="@+id/textPing"
        android:layout_toEndOf="@+id/textPing"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.0.0.0:0"
        android:id="@+id/textServerAddress"
        android:layout_below="@+id/textServerName"
        android:layout_alignStart="@+id/textServerName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FFA"
        android:id="@+id/textGameMode"
        android:layout_alignTop="@+id/textPing"
        android:layout_toEndOf="@+id/textServerLoad"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ping"
        android:id="@+id/labelPing"
        android:layout_below="@+id/textServerLocation"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Players"
        android:id="@+id/labelPlayers"
        android:layout_alignTop="@+id/labelPing"
        android:layout_alignStart="@+id/textServerLoad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mode"
        android:id="@+id/labelMode"
        android:layout_alignTop="@+id/labelPing"
        android:layout_alignStart="@+id/textGameMode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Map"
        android:id="@+id/textMap"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/textPing"
        android:layout_toEndOf="@+id/textGameMode"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Map"
        android:id="@+id/labelMap"
        android:layout_alignTop="@+id/labelPing"
        android:layout_alignStart="@+id/textMap" />
</RelativeLayout>